<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textcolorwhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_16">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/ivProdDetailImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/gift" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/activity_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_16">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"

            android:layout_weight="1"
            android:orientation="vertical">

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:id="@+id/tvProdDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="normal"
                android:text="@string/prod_name"
                android:textStyle="bold"
                android:textSize="@dimen/text_18" />

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:id="@+id/tvProdDetailRs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="normal"
                android:text="\u20B9 100"
                android:textStyle="bold"
                android:textSize="@dimen/text_18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibProdDetailMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_product_minus_unfill"
                android:padding="@dimen/padding_1" />

            <TextView
                android:id="@+id/tvProdDetailQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/total_quntity"
                android:textColor="@color/textcolorblack" />

            <ImageButton
                android:id="@+id/ibProdDetailPlus"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_product_plus_unfill"
                android:padding="@dimen/padding_1" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/activity_bg" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="@dimen/padding_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.smartsense.gifkar.textstyleutil.TypefaceTextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="normal"
                    android:gravity="right"
                    android:padding="@dimen/padding_8"
                    android:text="@string/unit_name"
                    android:textColor="@color/colorPrimary" />

                <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="normal"
                    android:gravity="right"
                    android:padding="@dimen/padding_8"
                    android:text="@string/description"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                    android:id="@+id/tvProdDetailUnitName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="normal"
                    android:padding="@dimen/padding_8"
                    android:text="@string/prod_name" />

                <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                    android:id="@+id/tvProdDetailDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="normal"
                    android:padding="@dimen/padding_8"
                    android:text="\u20B9 100" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:translationZ="10000dp">

        <LinearLayout
            android:id="@+id/llProdDetailCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_8">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvTotalQtyProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:drawableRight="@drawable/ic_cart_large"
                    android:gravity="center"
                    android:padding="@dimen/padding_5"
                    android:textColor="@color/textcolorwhite"
                    android:textSize="@dimen/text_16" />

                <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                    android:id="@+id/tvProdDetailCartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/tvTotalQtyProduct"
                    android:layout_alignTop="@id/tvTotalQtyProduct"
                    android:background="@drawable/badge_circle"
                    android:fontFamily="normal"
                    android:text="10"
                    android:textColor="@color/mainColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:id="@+id/tvProdDetailCartRs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:fontFamily="normal"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/textcolorwhite"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProdDetailCheckOut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="vertical">

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_right_arrow"
                android:fontFamily="normal"
                android:gravity="center"
                android:text="@string/checkout"
                android:textColor="@color/textcolorwhite"
                android:textSize="@dimen/text_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>