<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.smartsense.gifkar.textstyleutil.TypefaceTabLayout
        android:id="@+id/tlProdListTabList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fontFamily="normal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:tabGravity="center"
        app:tabMode="scrollable" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpProdListDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="65dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:translationZ="10000dp">

        <LinearLayout
            android:id="@+id/llProdListCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tvTotalQtyProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:drawableRight="@drawable/ic_cart_large"
                    android:gravity="center"
                    android:textColor="@color/textcolorwhite"
                    android:padding="@dimen/padding_5"
                    android:textSize="@dimen/text_16" />

                <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                    android:id="@+id/tvProdListCartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/tvTotalQtyProduct"
                    android:layout_alignTop="@id/tvTotalQtyProduct"
                    android:background="@drawable/badge_circle"
                    android:text="10"
                    android:fontFamily="normal"
                    android:textColor="@color/mainColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:id="@+id/tvProdListCartRs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="normal"
                android:gravity="center"
                android:text="100"
                android:layout_margin="@dimen/margin_10"
                android:textColor="@color/textcolorwhite"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProdListCheckOut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="vertical">

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="normal"
                android:drawableRight="@drawable/ic_right_arrow"
                android:gravity="center"
                android:text="@string/checkout"
                android:textColor="@color/textcolorwhite"
                android:textSize="@dimen/text_16" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>