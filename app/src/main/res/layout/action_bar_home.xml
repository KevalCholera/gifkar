<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorPrimary">


    <ImageView
        android:id="@+id/btActionBarBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/home_menu"
        android:visibility="gone" />



    <!--<LinearLayout-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_centerVertical="true">-->


    <ImageView
        android:id="@+id/btActionBarfilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:background="@drawable/home_filter" />

    <ImageView
        android:id="@+id/btActionBarSearch"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btActionBarfilter"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:background="@drawable/home_search" />

    <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
        android:id="@+id/actionBarHomeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btActionBarSearch"
        android:layout_toRightOf="@id/btActionBarBack"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:fontFamily="normal"
        android:background="@drawable/head_squre"
        android:singleLine="true"
        android:gravity="center_horizontal|center_vertical"
        android:padding="8dp"
        android:text="@string/delivery"
        android:textSize="@dimen/text_16"
        android:textColor="#FFFFFF" />
    <!--</LinearLayout>-->
</RelativeLayout>