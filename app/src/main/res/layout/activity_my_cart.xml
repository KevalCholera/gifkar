<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_cart_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/empty_order" />

        <com.smartsense.gifkar.textstyleutil.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:fontFamily="normal"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:text="@string/emapty_cart"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <com.smartsense.gifkar.textstyleutil.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="normal"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:textSize="@dimen/text_12"
            android:text="@string/emapty_cart_gift" />

        <com.smartsense.gifkar.textstyleutil.TypefaceButton
            android:id="@+id/btnCartStartGifiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:background="@color/mainColor"
            android:fontFamily="normal"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/btStartGift"
            android:textColor="@color/textcolorwhite"
            android:textSize="@dimen/text_16" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edittext_hint_color"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_8"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:id="@+id/tvCartShopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_weight="1"
                android:capitalize="sentences"
                android:fontFamily="normal"
                android:padding="@dimen/padding_8"
                android:text="@string/shop_name"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:id="@+id/tvCartTotalRs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_weight="1"
                android:capitalize="sentences"
                android:fontFamily="normal"
                android:gravity="right"
                android:padding="@dimen/padding_8"
                android:text="@string/shop_name"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

        </LinearLayout>


        <ListView
            android:id="@+id/lvCart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/llChackout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="normal"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/padding_8"
                android:text="@string/checkout"
                android:drawableRight="@drawable/ic_right_arrow"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>


