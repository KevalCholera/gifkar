<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/ivShopTopElementIMG"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black_light"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="vertical">


            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:id="@+id/tvShopTopElementRatting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:fontFamily="normal"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/textcolorwhite"
                android:textSize="@dimen/text_16" />

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:drawableLeft="@drawable/ic_star_white"
                android:drawablePadding="@dimen/padding_left_8"
                android:fontFamily="normal"
                android:gravity="center"
                android:text="RATINGS"
                android:textColor="@color/textcolorwhite"
                android:textSize="@dimen/text_16" />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_25"
            android:background="@color/textcolorwhite" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="vertical">


            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:id="@+id/tvShopTopElementReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:fontFamily="normal"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/textcolorwhite"
                android:textSize="@dimen/text_16" />


            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:drawableLeft="@drawable/address_edit"
                android:drawablePadding="@dimen/padding_left_8"
                android:fontFamily="normal"
                android:gravity="center"
                android:text="REVIEWS"
                android:textColor="@color/textcolorwhite"
                android:textSize="@dimen/text_16" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

