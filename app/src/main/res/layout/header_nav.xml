<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:id="@+id/llHeadProfile"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <com.smartsense.gifkar.utill.CircleImageView
            android:id="@+id/ivHeadImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/margin_10"
            android:background="@android:drawable/sym_def_app_icon"
            android:paddingTop="@dimen/nav_header_vertical_spacing" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:id="@+id/tVHeadName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="normal"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Ronak Thacker" />

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:id="@+id/tVHeadMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="normal"
                android:text="thackerronak@gmail.com"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/profile_edit" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></FrameLayout>

    <LinearLayout
        android:id="@+id/llHeadAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llHeadProfile"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal">

        <com.smartsense.gifkar.textstyleutil.TypefaceTextView
            android:id="@+id/tvHeadAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/address_pin"
            android:drawablePadding="@dimen/padding_8"
            android:fontFamily="normal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_16"
            android:text="Prahlad Nagar,380015"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/address_edit" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvHeadList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp" />


</LinearLayout>
