<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"


    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.smartsense.gifkar.textstyleutil.TypefaceTextView
            android:id="@+id/tvMyAddressElementName"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_height="wrap_content"
            android:fontFamily="normal"
            android:text="@string/reception_name"
            android:padding="@dimen/padding_2"
            android:textColor="@color/mainColor"
            android:textSize="20sp" />

        <com.smartsense.gifkar.textstyleutil.TypefaceTextView
            android:id="@+id/tvMyAddressElementNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="normal"
            android:padding="@dimen/padding_2"
            android:text="@string/reception_no" />

        <com.smartsense.gifkar.textstyleutil.TypefaceTextView
            android:id="@+id/tvMyAddressElementFlatNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="normal"
            android:textSize="16sp"
            android:padding="@dimen/padding_2"
            android:text="@string/flat" />


        <com.smartsense.gifkar.textstyleutil.TypefaceTextView
            android:id="@+id/tvMyAddressElementStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:fontFamily="normal"
            android:padding="@dimen/padding_2"
            android:textSize="16sp"
            android:hint="@string/street" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top|right"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivMyAddressElementAddressEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/ic_pencil" />


        <ImageView
            android:id="@+id/ivMyAddressElementAddressDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/ic_trash" />
    </LinearLayout>

</LinearLayout>

