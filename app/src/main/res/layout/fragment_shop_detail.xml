<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textcolorwhite"
    android:orientation="vertical">


    <!--<android.support.v4.widget.NestedScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_weight="1"-->
    <!--android:orientation="horizontal"-->
    <!--android:padding="@dimen/padding_16">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:gravity="right"
                android:padding="@dimen/padding_8"
                android:text="@string/shop_email"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12" />

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:id="@+id/tvShopDetailEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="normal"
                android:padding="@dimen/padding_8"
                android:text="thackerronak@gmail.com"
                android:textSize="@dimen/text_12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:gravity="right"
                android:padding="@dimen/padding_8"
                android:text="@string/shop_mno"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12" />

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:id="@+id/tvShopDetailMNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="normal"
                android:padding="@dimen/padding_8"
                android:text="@string/prod_name"
                android:textSize="@dimen/text_12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:gravity="right"
                android:padding="@dimen/padding_8"
                android:text="@string/shop_add"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12" />

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:id="@+id/tvShopDetailAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="normal"
                android:padding="@dimen/padding_8"
                android:text="@string/city_hint"
                android:textSize="@dimen/text_12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:gravity="right"
                android:padding="@dimen/padding_8"
                android:text="@string/map"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12" />

            <ImageView
                android:id="@+id/ivShopDetailMap"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:gravity="right"
                android:padding="@dimen/padding_8"
                android:text="@string/days"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12" />
            <!--android:id="@+id/tvShopDetailDays"-->
            <LinearLayout
                android:id="@+id/llShopDetailDays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="normal"
                android:orientation="horizontal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:gravity="right"
                android:padding="@dimen/padding_8"
                android:text="@string/open_time"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12" />

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:id="@+id/tvShopDetailOpenTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="normal"
                android:padding="@dimen/padding_8"
                android:text="@string/city_hint"
                android:textSize="@dimen/text_12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:gravity="right"
                android:padding="@dimen/padding_8"
                android:text="@string/close_time"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12" />

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:id="@+id/tvShopDetailCloseTIme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="normal"
                android:padding="@dimen/padding_8"
                android:text="@string/city_hint"
                android:textSize="@dimen/text_12" />


        </LinearLayout>

    </LinearLayout>
    <!--</android.support.v4.widget.NestedScrollView>-->

</android.support.v4.widget.NestedScrollView>