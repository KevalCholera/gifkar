<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/textcolorwhite"
    android:orientation="vertical">


    <!--<android.support.v4.widget.NestedScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_weight="1"-->
    <!--android:orientation="horizontal"-->
    <!--android:padding="@dimen/padding_16">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:fontFamily="normal"
                android:gravity="right"
                android:padding="@dimen/padding_8"
                android:text="@string/shop_email"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12" />

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:id="@+id/tvShopDetailEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="normal"
                android:padding="@dimen/padding_8"

                android:textSize="@dimen/text_12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:fontFamily="normal"
                android:gravity="right"
                android:padding="@dimen/padding_8"
                android:text="@string/shop_mno"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12" />

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:id="@+id/tvShopDetailMNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="normal"
                android:padding="@dimen/padding_8"

                android:textSize="@dimen/text_12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:fontFamily="normal"
                android:gravity="right"
                android:padding="@dimen/padding_8"
                android:text="@string/shop_add"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12" />

            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:id="@+id/tvShopDetailAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="normal"
                android:padding="@dimen/padding_8"

                android:textSize="@dimen/text_12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:orientation="horizontal">


            <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:fontFamily="normal"
                android:gravity="right"
                android:padding="@dimen/padding_8"
                android:text="@string/map"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_weight="2">
                <ProgressBar
                    android:id="@+id/pbShopDetailMap"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivShopDetailMap"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:gravity="right"
                android:orientation="vertical">

                <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="normal"
                    android:gravity="right"
                    android:padding="@dimen/padding_8"
                    android:text="@string/days"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_12" />

                <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="normal"
                    android:gravity="right"
                    android:padding="@dimen/padding_8"
                    android:text="@string/open_time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_12" />

                <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="normal"
                    android:gravity="right"
                    android:padding="@dimen/padding_8"
                    android:text="@string/close_time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>
            <!--android:id="@+id/tvShopDetailDays"-->
            <LinearLayout
                android:id="@+id/llShopDetailDays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="normal"
                android:orientation="horizontal" />


        </LinearLayout>


    </LinearLayout>
    <!--</android.support.v4.widget.NestedScrollView>-->

</ScrollView>