<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/activity_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.smartsense.gifkar.textstyleutil.TypefaceTextView
            android:id="@+id/tvChackout1ShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_weight="1"
            android:capitalize="sentences"
            android:fontFamily="normal"
            android:text="@string/shop_name"
            android:textColor="@android:color/black"
            android:textSize="20dp" />



    </LinearLayout>


    <ListView
        android:id="@+id/lvCheckout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textcolor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:text="@string/total"
                android:textColor="@android:color/black" />

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:id="@+id/tvChackout1Total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_25"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:gravity="right"
                android:text="\u20B9 200"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:text="@string/shipping"
                android:textColor="@android:color/black" />

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:id="@+id/tvChackout1Shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_25"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:gravity="right"
                android:text="\u20B9 200"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:text="@string/payable"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:id="@+id/tvChackout1Payable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_25"
                android:layout_weight="1"
                android:fontFamily="normal"
                android:gravity="right"
                android:text="\u20B9 200"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <com.smartsense.gifkar.textstyleutil.TypefaceButton
            android:id="@+id/btnContinueCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@color/mainColor"
            android:fontFamily="normal"
            android:text="@string/continue_checkout"
            android:textColor="@color/textcolorwhite"
            android:textSize="@dimen/text_size_20" />

    </LinearLayout>
</LinearLayout>