<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorPrimary">


    <ImageView
        android:id="@+id/btActionBarBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/btActionBarBack1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btActionBarBack"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:src="@drawable/home_search" />

    <ImageView
        android:id="@+id/btActionBarBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btActionBarBack1"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:src="@drawable/home_search" />
    <!--<LinearLayout-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_centerVertical="true">-->

    <ImageView
        android:id="@+id/btActionBarInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_action_info" />


    <ImageView
        android:id="@+id/btActionBarfilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btActionBarInfo"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/home_filter" />

    <ImageView
        android:id="@+id/btActionBarSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btActionBarfilter"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/home_search" />



    <com.smartsense.gifkar.textstyleutil.TypefaceTextView
        android:id="@+id/actionBarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/btActionBarSearch"
        android:layout_toRightOf="@id/btActionBarBack2"
        android:fontFamily="normal"
        android:gravity="center_horizontal|center_vertical"
        android:padding="4dp"
        android:singleLine="true"
        android:text="@string/delivery"
        android:textSize="@dimen/text_16"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF" />
    <!--</LinearLayout>-->
</RelativeLayout>