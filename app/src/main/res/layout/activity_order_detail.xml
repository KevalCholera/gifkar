<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                    android:id="@+id/tvOrderDetailOrderNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="bold"
                    android:padding="@dimen/padding_8"
                    android:text="@string/order_no"
                    android:textSize="16dp" />

                <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                    android:id="@+id/tvOrderDetailDateTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="normal"
                    android:gravity="right"
                    android:padding="@dimen/padding_8"
                    android:text="@string/datetime"
                    android:textSize="12dp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:background="@color/textcolorwhite"
            android:orientation="vertical"
            android:padding="@dimen/padding_20">

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="bold"
                android:padding="@dimen/padding_2"
                android:text="@string/receiver_info"
                android:textColor="@color/mainColor"
                android:textSize="20dp" />

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:id="@+id/tvOrderDetailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="normal"
                android:padding="@dimen/padding_2"
                android:text="@string/delivery_status"
                android:textSize="12dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:background="@color/textcolorwhite"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/padding_20">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/ivShopListImage"
                    android:layout_width="@dimen/product_image_height"
                    android:layout_height="@dimen/product_image_height"
                    android:background="@drawable/ic_gifkar_logo" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                        android:id="@+id/tvOrderElementShopName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="bold"
                        android:padding="@dimen/padding_2"
                        android:text="@string/shop_name"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                        android:id="@+id/tvOrderElementOrderStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="normal"
                        android:padding="@dimen/padding_2"
                        android:text="@string/delivery_status"
                        android:textSize="16dp" />
                </LinearLayout>

                <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                    android:id="@+id/tvOrderElementDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:fontFamily="normal"
                    android:gravity="right"
                    android:text="@string/items"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/edittext_hint_color"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/padding_10">

                <ImageView
                    android:id="@+id/ivOrderAccepted"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/accepted_unfill" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/dashline" />

                <ImageView
                    android:id="@+id/ivOrderProcess"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/in_progress_unfill" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/dashline" />

                <ImageView
                    android:id="@+id/ivOrderCompleted"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/deliverd_unfill" />

            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/lvOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:background="@color/textcolorwhite"
            android:orientation="vertical"
            android:padding="@dimen/padding_20">

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="bold"
                android:padding="@dimen/padding_2"
                android:text="@string/sender_info"
                android:textColor="@color/mainColor"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                    android:id="@+id/tvOrderDetailName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="normal"
                    android:padding="@dimen/padding_2"
                    android:text="@string/name"
                    android:textSize="12dp" />

                <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                    android:id="@+id/tvOrderDetailNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="normal"
                    android:padding="@dimen/padding_2"
                    android:text="@string/mobile"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProdListBottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal"
            android:translationZ="10000dp">

            <LinearLayout
                android:id="@+id/llOrderDetailEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="horizontal">

                <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_right_arrow"
                    android:fontFamily="normal"
                    android:gravity="center"
                    android:text="@string/email_details"
                    android:textColor="@color/textcolorwhite"
                    android:textSize="@dimen/text_16" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOrderDetailPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:orientation="vertical">

                <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_right_arrow"
                    android:fontFamily="normal"
                    android:gravity="center"
                    android:text="@string/call_us"
                    android:textColor="@color/textcolorwhite"
                    android:textSize="@dimen/text_16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
