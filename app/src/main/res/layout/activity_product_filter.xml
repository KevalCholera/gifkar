<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/activity_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.smartsense.gifkar.textstyleutil.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_weight="1"
            android:capitalize="sentences"
            android:fontFamily="normal"
            android:text="@string/sort_by"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_20"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical">




        <CheckBox
            android:id="@+id/cbProdFilterPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_25"
            android:background="@drawable/price_background"
            android:button="@android:color/transparent" />

        <CheckBox
            android:id="@+id/cbProdFilterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/name_background"
            android:button="@android:color/transparent" />
    </LinearLayout>

    <com.smartsense.gifkar.textstyleutil.TypefaceButton
        android:id="@+id/btnProdApplyFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:background="@color/mainColor"
        android:fontFamily="normal"
        android:text="@string/apply_filter"
        android:textColor="@color/textcolorwhite"
        android:textSize="@dimen/text_size_20" />
</LinearLayout>
