<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.smartsense.gifkar.ForgotPasswordActivity">

    <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:fontFamily="normal"
        android:padding="@dimen/padding_8"
        android:text="@string/mobile_text" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center_vertical">

        <com.smartsense.gifkar.textstyleUtil.TypefaceEditText
            android:id="@+id/etEnterCountryCode"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"

            android:background="@drawable/edittext_round"
            android:drawableRight="@drawable/down_arrow"
            android:focusable="false"

            android:clickable="true"
            android:fontFamily="normal"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:textSize="@dimen/text_16"
             />

        <com.smartsense.gifkar.textstyleUtil.TypefaceEditText
            android:id="@+id/etEnterMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/edittext_round"
            android:ems="10"
            android:fontFamily="normal"
            android:hint="@string/mobile"
            android:inputType="number"
            android:padding="@dimen/padding_5"
            android:textSize="@dimen/text_16"
            android:textColorHighlight="@android:color/white"
            android:textColorHint="@color/edittext_hint_color" />
    </LinearLayout>

    <com.smartsense.gifkar.textstyleUtil.TypefaceButton
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@color/mainColor"
        android:fontFamily="normal"
        android:text="@string/done"
        android:textColor="@color/textcolorwhite"
        android:textSize="@dimen/text_16" />
</LinearLayout>
