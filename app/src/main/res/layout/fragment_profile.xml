<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    android:padding="@dimen/margin_5">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_25"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.smartsense.gifkar.textstyleutil.TypefaceEditText
                android:id="@+id/etProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:background="@drawable/edittext_round"
                android:ems="10"
                android:fontFamily="normal"
                android:hint="@string/email1"
                android:padding="@dimen/padding_8"
                android:textColorHighlight="@android:color/white"
                android:textColorHint="@color/edittext_hint_color" />

            <com.smartsense.gifkar.textstyleutil.TypefaceTextView
                android:fontFamily="normal"
                android:id="@+id/tVProfileVerified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:drawablePadding="@dimen/padding_2"
                android:drawableLeft="@drawable/unverified"
                android:gravity="center"
                android:text="Unverified"
                android:textColor="@color/red" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleutil.TypefaceEditText
                android:id="@+id/etProfileFirstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@drawable/edittext_round"
                android:ems="10"
                android:fontFamily="normal"
                android:hint="@string/full_name"
                android:padding="@dimen/padding_8"
                android:textColorHighlight="@android:color/white"
                android:textColorHint="@color/edittext_hint_color" />

            <com.smartsense.gifkar.textstyleutil.TypefaceEditText
                android:id="@+id/etProfileLastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@drawable/edittext_round"
                android:ems="10"
                android:fontFamily="normal"
                android:hint="@string/last_name"
                android:padding="@dimen/padding_8"
                android:textColorHighlight="@android:color/white"
                android:textColorHint="@color/edittext_hint_color" />
        </LinearLayout>

        <com.smartsense.gifkar.textstyleutil.TypefaceEditText
            android:id="@+id/etProfileDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/edittext_round"
            android:ems="10"
            android:fontFamily="normal"
            android:hint="@string/dob"
            android:padding="@dimen/padding_8"
            android:textColorHighlight="@android:color/white"
            android:textColorHint="@color/edittext_hint_color" />

        <RadioGroup
            android:id="@+id/rbProfileGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.smartsense.gifkar.textstyleutil.TypefaceRadioButton
                android:id="@+id/rbProfileMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="normal"
                android:text="Male" />

            <com.smartsense.gifkar.textstyleutil.TypefaceRadioButton
                android:id="@+id/rbProfileFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="normal"
                android:text="Female" />
        </RadioGroup>

        <com.smartsense.gifkar.textstyleutil.TypefaceButton
            android:id="@+id/btnProfileUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@color/mainColor"
            android:fontFamily="normal"
            android:text="@string/update"
            android:textColor="@color/textcolorwhite"
            android:textSize="@dimen/text_size_20" />


</LinearLayout>

</ScrollView>
