<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    android:padding="@dimen/margin_5">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_25"
        android:orientation="vertical">


    <com.smartsense.gifkar.textstyleutil.TypefaceTextView
        android:id="@+id/tvSignupTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:fontFamily="normal"        
        android:padding="@dimen/padding_8"
        android:text="@string/forgot_text" />

    <com.smartsense.gifkar.textstyleutil.TypefaceEditText
        android:id="@+id/etForgotEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/edittext_round"
        android:ems="10"
        android:fontFamily="normal"
        android:hint="@string/email1"

        android:inputType="textEmailAddress"
        android:padding="@dimen/padding_5"
        android:textSize="@dimen/text_16"
        android:textColorHighlight="@android:color/white"
        android:textColorHint="@color/edittext_hint_color" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/margin_10"
            android:src="@drawable/bottom_border" />



        <com.smartsense.gifkar.textstyleutil.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="normal"
            android:gravity="center"
            android:padding="@dimen/padding_16"
            android:textSize="@dimen/text_12"
            android:text="@string/forgot_or"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.smartsense.gifkar.textstyleutil.TypefaceEditText
            android:id="@+id/etForgotCountryCode"
            android:layout_width="80dp"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/edittext_round"
            android:drawableRight="@drawable/down_arrow"
            android:focusable="false"
            android:clickable="true"
            android:fontFamily="normal"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:textSize="@dimen/text_16"
             />

        <com.smartsense.gifkar.textstyleutil.TypefaceEditText
            android:id="@+id/etForgotMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/edittext_round"
            android:ems="10"
            android:fontFamily="normal"
            android:hint="@string/mobile"
            android:inputType="number"
            android:padding="@dimen/padding_5"
            android:textSize="@dimen/text_16"
            android:textColorHighlight="@android:color/white"
            android:textColorHint="@color/edittext_hint_color" />
    </LinearLayout>

    <com.smartsense.gifkar.textstyleutil.TypefaceButton
        android:id="@+id/btnForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@color/mainColor"
        android:fontFamily="normal"
        android:text="@string/done"
        android:textColor="@color/textcolorwhite"
        android:textSize="@dimen/text_16" />
</LinearLayout>
</ScrollView>