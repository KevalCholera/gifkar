<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smartsense.gifkar.ForgotPasswordActivity">

    <com.smartsense.gifkar.textstyleutil.TypefaceTextView
        android:id="@+id/tvSignupTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:fontFamily="normal"
        android:padding="@dimen/padding_8"
        android:text="@string/forgot_text" />

    <com.smartsense.gifkar.textstyleutil.TypefaceEditText
        android:id="@+id/etForgotEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/edittext_round"
        android:ems="10"
        android:fontFamily="normal"
        android:hint="@string/email1"
        android:inputType="textEmailAddress"
        android:padding="@dimen/padding_8"
        android:textColorHighlight="@android:color/white"
        android:textColorHint="@color/edittext_hint_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">



        <com.smartsense.gifkar.textstyleutil.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:fontFamily="normal"
            android:gravity="center"
            android:layout_weight="2"
            android:padding="@dimen/padding_8"
            android:text="@string/forgot_or" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.smartsense.gifkar.textstyleutil.TypefaceEditText
            android:id="@+id/etForgotCountryCode"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/edittext_round"
            android:drawableRight="@drawable/com_facebook_tooltip_black_bottomnub"
            android:enabled="false"
            android:fontFamily="normal"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:text="+1" />

        <com.smartsense.gifkar.textstyleutil.TypefaceEditText
            android:id="@+id/etForgotMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/edittext_round"
            android:ems="10"
            android:fontFamily="normal"
            android:hint="@string/mobile"
            android:inputType="number"
            android:padding="@dimen/padding_8"
            android:textColorHighlight="@android:color/white"
            android:textColorHint="@color/edittext_hint_color" />
    </LinearLayout>

    <com.smartsense.gifkar.textstyleutil.TypefaceButton
        android:id="@+id/btnForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@color/mainColor"
        android:fontFamily="normal"
        android:text="@string/done"
        android:textColor="@color/textcolorwhite"
        android:textSize="@dimen/text_size_20" />
</LinearLayout>
