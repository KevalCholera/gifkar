<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llMyAddress"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/activity_bg"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivReviewUser"
            android:layout_width="50dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@drawable/ic_user"
            android:layout_height="50dp" />

        <com.smartsense.gifkar.textstyleutil.TypefaceTextView
            android:id="@+id/tvReviewUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_weight="1"
            android:capitalize="sentences"
            android:fontFamily="normal"
            android:text="@string/review_user"
            android:textColor="@color/mainColor"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <RatingBar
            android:id="@+id/rbReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <com.smartsense.gifkar.textstyleutil.TypefaceEditText
            android:id="@+id/etReviewAdd"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/edittext_round"
            android:fontFamily="normal"
            android:gravity="top"
            android:hint="@string/write_review"
            android:padding="@dimen/padding_10"
            android:textColorHighlight="@android:color/white"
            android:textColorHint="@color/edittext_hint_color" />

        <com.smartsense.gifkar.textstyleutil.TypefaceButton
            android:id="@+id/btnReviewAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:background="@color/mainColor"
            android:fontFamily="normal"
            android:text="@string/submit"
            android:textColor="@color/textcolorwhite"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>

</LinearLayout>