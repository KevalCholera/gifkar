<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_16"
            android:capitalize="sentences"
            android:fontFamily="normal"
            android:text="@string/review"
            android:textColor="@color/textcolorwhite"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMyAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
            android:id="@+id/tvReviewOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:capitalize="sentences"
            android:fontFamily="normal"
            android:text="@string/order_no"
            android:textSize="@dimen/text_14" />

        <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
            android:id="@+id/tvReviewShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:capitalize="sentences"
            android:fontFamily="normal"
            android:text="@string/shop_name"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/text_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <RatingBar
            android:id="@+id/rbReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="false"
            android:numStars="5" />

        <com.smartsense.gifkar.textstyleUtil.TypefaceEditText
            android:id="@+id/etReviewAdd"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/edittext_round"
            android:fontFamily="normal"
            android:gravity="top"
            android:singleLine="true"
            android:hint="@string/write_review"
            android:padding="@dimen/padding_10"
            android:textColorHighlight="@android:color/white"
            android:textColorHint="@color/edittext_hint_color"
            android:textSize="@dimen/text_12" />

        <com.smartsense.gifkar.textstyleUtil.TypefaceButton
            android:id="@+id/btnReviewAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:background="@color/mainColor"
            android:fontFamily="normal"
            android:text="@string/submit"
            android:textColor="@color/textcolorwhite"
            android:textSize="@dimen/text_16" />

        <com.smartsense.gifkar.textstyleUtil.TypefaceTextView
            android:id="@+id/tvReviewSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:capitalize="sentences"
            android:fontFamily="normal"
            android:text="@string/skip"

            android:textSize="@dimen/text_12" />
    </LinearLayout>

</LinearLayout>