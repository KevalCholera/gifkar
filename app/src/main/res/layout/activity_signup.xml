<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckground"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="@string/sign_up"
                android:textColor="@color/textcolorwhite"
                android:textSize="@dimen/text_30"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/iv_close_register"
                android:layout_width="@dimen/img_login_35"
                android:layout_height="@dimen/img_login_35"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/cancel" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/signup_greet_text"
            android:textColor="@color/textcolorwhite"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/img_login_35"
            android:layout_marginRight="@dimen/img_login_35"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.smartsense.deliveryjunction.utill.CircleImageView1
                android:id="@+id/iv_profile1_Reg"
                android:layout_width="@dimen/img_signup_profile"
                android:layout_height="@dimen/img_signup_profile"
                android:layout_gravity="center"
                android:src="@drawable/profile_screen_icon" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_NameWrapper_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etSignupFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@drawable/edittext_round"
                    android:ems="10"
                    android:hint="@string/full_name"
                    android:inputType="text"
                    android:padding="@dimen/padding_10"
                    android:translationY="@dimen/transitiony_2" />
            </android.support.design.widget.TextInputLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_emailWrapper_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etSignupEmailId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5"
                        android:background="@drawable/edittext_round"
                        android:ems="10"
                        android:hint="@string/emailid_hint"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/padding_10"
                        android:text=""
                        android:translationY="@dimen/transitiony_2" />
                </android.support.design.widget.TextInputLayout>

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginRight="4dp" />
            </FrameLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_passWrapper_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etSignupPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@drawable/edittext_round"
                    android:ems="10"
                    android:hint="@string/set_password"
                    android:inputType="textPassword"
                    android:padding="@dimen/padding_10"
                    android:translationY="@dimen/transitiony_2" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_repassWrapper_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etSignupRePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@drawable/edittext_round"
                    android:ems="10"
                    android:hint="@string/reenter_password"

                    android:inputType="textPassword"
                    android:padding="@dimen/padding_10"
                    android:translationY="@dimen/transitiony_2" />
            </android.support.design.widget.TextInputLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_MnoWrapper_Reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etSignupMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5"
                        android:background="@drawable/edittext_round"
                        android:ems="10"
                        android:hint="@string/mobile_hint"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/padding_10"
                        android:translationY="@dimen/transitiony_2" />
                </android.support.design.widget.TextInputLayout>

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginRight="4dp" />
            </FrameLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_referCodeWrapper_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etSignupReferCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@drawable/edittext_round"
                    android:ems="10"
                    android:hint="@string/refer_hint"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="@dimen/padding_10"
                    android:translationY="@dimen/transitiony_2" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_55"
                android:layout_marginRight="@dimen/margin_55"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@drawable/button_green"
                android:text="@string/register"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>